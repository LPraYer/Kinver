@model MVCKinver.Models.Order

@{
    ViewBag.Title = "提交订单_景悦锦辰";
}
<div class="container container-margin-top">
    <h3>填写订单</h3>
    <link href="../../Content/themes/bootstrap-datepicker/datepicker.css" rel="stylesheet" />
    <script src="../../Scripts/bootstrap-datepicker.js"></script>
    <script src="../../Scripts/bootstrap-datepicker.zh-CN.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <div style="width:650px;margin-left:10px;">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset id="order-form" style="border-bottom:1px dashed #ccc;padding-bottom:30px;">
            <legend>配送地址及联系方式</legend>
            <p class="muted">网上下单目前仅支持北京地区家庭用户</p>
            <div style="display:table;">
                <div style="float:left;margin-right:20px;">
                    <div>
                        @Html.LabelFor(model => model.Address)
                        @Html.TextBoxFor(model => model.Address, new {maxlength = "50",placeholder = "必填" })
                    </div>
                </div>
                <div style="float:left;margin-right:20px;">
                    <div>
                        @Html.LabelFor(model => model.PostalCode)
                        @Html.TextBoxFor(model => model.PostalCode, new {maxlength = "6",placeholder = "选填" })
                    </div>
                </div>
            </div>
            <div style="display:table;">
                <div style="float:left;margin-right:20px;">
                    <div>
                        @Html.LabelFor(model => model.Username)
                        @Html.TextBoxFor(model => model.Username, new {maxlength = "50",placeholder = "必填" })
                    </div>
                </div>
                <div style="float:left;margin-right:20px;">
                    <div>
                        @Html.LabelFor(model => model.PhoneNumber)
                        @Html.TextBoxFor(model => model.PhoneNumber, new {maxlength = "20",placeholder = "必填" })
                    </div>
                </div>
            </div>
            <div style="display:table;">
                <div style="float:left;margin-right:20px;">
                    <div>
                        <label for="BestDeliverTime">选择配送日期</label>
                        <input data-val="true" data-val-length="" data-val-length-max="10" data-val-required="* 请选择配送日期" maxlength="10" name="DeliverDay" placeholder="必填" type="text" id="DeliverDay" class="input-validation-error">
                    </div>
                </div>
                <div style="float:left;margin-right:20px;">
                    <div>
                        <label for="BestDeliverTime">选择配送时间</label>
                        <label class="checkbox inline" style="width:80px;">
                            <input name="BestDeliverTime" type="checkbox" id="BDT912" value="912" checked="checked"> 9:00-12:00
                        </label>
                        <label class="checkbox inline" style="width:80px;">
                            <input name="BestDeliverTime" type="checkbox" id="BDT1218" value="1218" checked="checked"> 12:00-18:00
                        </label>
                        <label class="checkbox inline" style="width:80px;">
                            <input name="BestDeliverTime" type="checkbox" id="BDT1820" value="1820" checked="checked"> 18:00-20:00
                        </label>
                    </div>
                </div>
            </div>
            @*@Html.EditorForModel()*@
        </fieldset>
        @*<fieldset>
            <legend>支付方式</legend>
            <p>使用优惠码</p>
            <div class="editor-label">
                @Html.Label("优惠码")
            </div>
            <div class ="editor-field">
                @Html.TextBox("PromoCode")
            </div>
        </fieldset>*@
        <input type="submit" class="btn btn-primary btn-large" value="提交订单" style="margin-top:20px;float:left;" />
        <div style="float:left;margin-top:25px;margin-left:20px;padding:5px;">
            <span style="margin-left:10px;">
                @Html.ValidationMessageFor(model => model.Address)
            </span>
            <span style="margin-left:10px;">
            @Html.ValidationMessageFor(model => model.PostalCode)
            </span>
            <span style="margin-left:10px;">
            @Html.ValidationMessageFor(model => model.Username)
            </span>
            <span style="margin-left:10px;">
            @Html.ValidationMessageFor(model => model.PhoneNumber)
            </span>
            <span style="margin-left:10px;">
            @Html.ValidationMessageFor(model => model.DeliverDay)
            </span>
        </div>
    }
    </div>
</div>
<script type="text/javascript">
    var startDate = new Date();
    //设置间隔日期
    startDate.setDate(startDate.getDate() + 1);
    $('#DeliverDay').datepicker({
        language: "zh-CN",
        startDate: startDate,
        weekStart: 1,
        todayHighlight: true,
        forceParse: true
    });
</script>