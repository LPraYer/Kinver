@model MVCKinver.ViewModels.ShoppingCartViewModel

@{
    ViewBag.Title = "购物车_景悦锦辰";
}

<script src ="/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        //Document.ready -> link up remove event handler
        $(".RemoveLink").click(function () {
            //Get the id from the link
            var recordToDelete = $(this).attr("data-id");
            if (recordToDelete != "") {
                //Perform the ajax post
                $.post("/ShoppingCart/RemoveFromCart", { "id": recordToDelete },
                    function (data) {
                        //Successful requests get here
                        //Updata the page elements
                        if (data.ItemCount == 0) {
                            $('#row-' + data.DeleteId).fadeOut('slow');
                        }
                        else {
                            $('#item-count-' + data.DeleteId).text(data.ItemCount);
                        }
                        $('#cart-total').text(data.CartTotal);
                        $('#update-message').text(data.Message);
                        $('#cart-status').text('Cart(' + data.CartCount + ')');
                    }
                    );
            }
        }

        );
    });
    function handleUpdate()
    {
        //Load and deserialize the returned JSON data
        var json = context.get_data();
        var data = Sys.Serialization.JavaScriptSerializer.deserialize(json);
        //Update the page elements
        if (data.ItemCount == 0) {
            $('#row-' + data.DeleteId).fadeOut('slow');
        }
        else {
            $('#item-count-' + data.DeleteId).text(data.ItemCount);
        }
        $('#cart-total').text(data.CartTotal);
        $('#update-message').text(data.Message);
        $('#cart-status').text('Cart('+data.CartCount+')');
    }
</script>
<div class="container container-margin-top">
    <div class="row">
        <div class="span8">
            <h3>
                您的购物车:
            </h3>
            <div id="update-message">
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>产品名称</th>
                        <th>产品规格</th>
                        <th>单价</th>
                        <th>数量</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    { 
                        <tr id="row-@item.RecordId">
                            <td>
                                @Html.ActionLink(item.Product.Title, "Details", "Store", new { id = item.Product.ProductId }, null)
                            </td>
                            <td>
                                @item.Product.ProductSizes.SingleOrDefault(ps => ps.ProductSizeId == item.Product.ProductSizes.FirstOrDefault().ProductSizeId).NetWeightPerUnit 克 / @item.Product.ProductSizes.SingleOrDefault(ps => ps.ProductSizeId == item.Product.ProductSizes.FirstOrDefault().ProductSizeId).SaleUnit <span class="muted">（ @item.Product.ProductSizes.SingleOrDefault(ps => ps.ProductSizeId == item.Product.ProductSizes.FirstOrDefault().ProductSizeId).Size ）</span>
                            </td>
                            <td>
                                @item.Product.ProductSizes.SingleOrDefault(ps => ps.ProductSizeId == item.Product.ProductSizes.FirstOrDefault().ProductSizeId).PricePerUnit 元 / @item.Product.ProductSizes.SingleOrDefault(ps => ps.ProductSizeId == item.Product.ProductSizes.FirstOrDefault().ProductSizeId).SaleUnit
                            </td>
                            <td id="item-count-@item.RecordId">
                                @item.Count @item.Product.ProductSizes.SingleOrDefault(ps => ps.ProductSizeId == item.Product.ProductSizes.FirstOrDefault().ProductSizeId).SaleUnit
                            </td>
                            <td>
                                <a href="#" class="RemoveLink" data-id="@item.RecordId">删除</a>
                            </td>
                        </tr>
                    }
                    <tr style="font-size:larger;">
                        <td>
                            总额：
                            <span id="cart-total">@Model.CartTotal</span>
                        </td>
                        <td>
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <div>
                <a href="/Checkout/AddressAndPayment/" class="btn btn-primary btn-large" style="color:white;">下订单 >></a>
            </div>
        </div>
    </div>
</div>